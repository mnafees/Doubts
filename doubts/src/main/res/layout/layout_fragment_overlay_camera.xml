<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="false" android:id="@+id/cameraView">
    </FrameLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="left|top" android:layout_alignParentTop="true"
            android:background="@drawable/newdoubt_camera_backdrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click to take a snap"
            android:id="@+id/textView" android:layout_gravity="left|top" android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/imageView" android:layout_marginBottom="20dp"/>
</RelativeLayout>
