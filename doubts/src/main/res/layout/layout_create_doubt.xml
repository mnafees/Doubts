<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.CreateNewDoubt">

    <android.support.v7.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/title_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:maxLines="5"
                    android:hint="Doubt Title"
                    android:textColorHint="#2196F3"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/action_bar">

        <org.apmem.tools.layouts.FlowLayout
            android:orientation="horizontal"
            android:id="@+id/tags_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/border_bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_tag_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tags"
                android:layout_weight="1"
                android:hint="Tags separated by space"
                android:textSize="14sp"
                android:textColor="#757575"
                android:textColorHint="@color/grey_light"
                android:layout_gravity="center_vertical"
                android:textCursorDrawable="@null"
                android:background="@android:color/transparent"/>

        </org.apmem.tools.layouts.FlowLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/doubt_image_container"
            android:layout_below="@+id/tags_layout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/doubt_image"
                android:layout_centerHorizontal="true"
                android:src="@drawable/camera_backdrop"
                android:scaleType="centerInside"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/camera_fragment"
                android:name="solutions.doubts.activities.createdoubt.DoubtsCameraFragment"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@+id/doubt_image_container">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_icon_image_view"
                android:src="@drawable/ic_description_grey600_24dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/description"
                android:layout_weight="1"
                android:hint="Description"
                android:textSize="14sp"
                android:textColor="#757575"
                android:textColorHint="@color/grey_light"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textCursorDrawable="@null"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/create_doubt_button"
        android:src="@drawable/ic_send_white_24dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:elevation="4dp"
        app:borderWidth="0dp"/>

</RelativeLayout>